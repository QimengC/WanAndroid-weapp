/* pages/project/project.wxss */

.item {
  width: 100%;
  height: 340rpx;
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
  background-color: white;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.item .cover {
  width: 200rpx;
  height: 300rpx;
}

.item .content {
  width: 460rpx;
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}

.item .content title {
  flex-grow: 1;
  display: -webkit-box;
  font-size: 28rpx;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item .content .chapter {
  color: #1296db;
  font-size: 30rpx;
}

.item .content .bottom {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.item .content .bottom .img {
  width: 32rpx;
  height: 32rpx;
  margin-top: 8rpx;
  margin-right: 8rpx;
}

.item .content .bottom .author {
  color: grey;
  font-size: 28rpx;
  flex-grow: 1;
}

.item .content .bottom .time {
  color: grey;
  font-size: 28rpx;
}
