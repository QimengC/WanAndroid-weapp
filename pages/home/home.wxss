/* pages/home/home.wxss */
.swiper {
  width: 100%;
  height: 360rpx;
}

 .swiper image {
  width: 100%;
  height: auto;
} 

.item {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
  background-color: white;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.item .title {
  font-size: 34rpx;
  margin: 10rpx 0
}


.item .chapter {
  color: #1296db;
  font-size: 28rpx;
}

.item .bottom {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.item .bottom .img {
  width: 32rpx;
  height: 32rpx;
  margin-top: 8rpx;
  margin-right: 8rpx;
}

.item .bottom .author {
  color: grey;
  font-size: 28rpx;
  flex-grow: 1
}

.item .bottom .time {
  color: grey;
  font-size: 28rpx;
}

